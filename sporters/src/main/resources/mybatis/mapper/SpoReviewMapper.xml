	<!-- 상세보기(조회수) -->	
	<update id="updateHit" parameterType="int">
		UPDATE LOCALS
		   SET HIT = HIT + 1
		 WHERE LOCAL_BOARD_NO = #{localBoardNo}
	</update>
	<update id="latterupdateHit" parameterType="int">
		UPDATE SPO_REVIEW
