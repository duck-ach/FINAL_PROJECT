	<select id="selectSpoReviewList" parameterType="Map" resultMap="SpoReviewMap">
		SELECT  	   A.SPO_REVIEW_NO, A.TITLE, A.CONTENT, A.CREATE_DATE,  A.HIT, A.USER_NO, A.STATE,A.LOCAL_BOARD_NO, A.LOCAL_NO, A.IP, A.MODIFY_DATE
		  FROM (SELECT F.SPO_REVIEW_NO, F.TITLE, F.CONTENT, F.CREATE_DATE,  F.HIT, U.USER_NO, F.STATE,L.LOCAL_BOARD_NO, L.LOCAL_NO, F.IP, F.MODIFY_DATE
		  		  FROM SPO_REVIEW F INNER JOIN USERS U
		  		   ON F.USER_NO = U.USER_NO LEFT OUTER JOIN LOCALS L    
		     	    ON F.LOCAL_BOARD_NO = L.LOCAL_BOARD_NO) A
		  LIMIT #{begin}, #{recordPerPage}	
	</select>
	

	
